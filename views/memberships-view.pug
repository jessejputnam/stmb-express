extends layout 

block content 
  h1= title 

  if !memberships.length
    p No memberships yet added

  a(href=`/${currentUser.creator.page}/add-membership`) Add Membership

  - memberships.sort((a, b) => a.price - b.price)

  each membership in memberships 
    div
      p= membership.title
      p= "$" + membership.price.toFixed(2)
      p= membership.desc 
      ul 
        each reward in membership.rewards
          li= "- " + reward


