extends ../layout 

block styles 
  link(rel="stylesheet", href="/stylesheets/style-analytics.css")

block content 
  div.page-wrapper
    h1= title 

    div 
      h2 Subscribers
      div.subs-container
        div.flex-h
          p(style="width:100%;text-align:center") Subs Count:
          each membership, key in subs_by_membership  
            p(style="font-size:.8rem") #{key}: #{membership.length}

        each sub of subs 
          div.sub-wrapper 
            p= sub.user.username
            p(class=(sub.membership ? "active" : "warning"))= sub.membership ? sub.membership.title : "Deleted membership"