extends layout 

block content 
  h1= title 

  div 
    a(href=`/account/posts/add-post_text`) Add Post

  if !posts.length
    div
      em No posts yet
  else 
    each post in posts 
      div.post-container
        div.post-media
          if post.type === "image"
            img(src=post.typeContent, alt="Post image")
          if post.type === "video" 
            //- EMBED iFRAME?
        div.post-title
          h4!= post.title 
        div.post-text
          p!= post.text