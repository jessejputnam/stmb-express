block styles 
  link(rel="stylesheet", href="/stylesheets/style-posts.css")

block scripts 
  script(type="module" src="/javascripts/postsScript.js" defer)

block content 
  div.page-wrapper
    h1= title 

    div 
      a(href=`/account/posts/add-post_text`) Add Post

    if !posts.length
      div
        em No posts yet
    else
      div.abbr-posts-container
        each post in posts
          a(href=`posts/${post._id}`)
            div.abbr-post-wrapper
              div.post-title
                p.timestamp= post.readableDate
                h3!= post.title 
              div.abbr-post-content 
                em= post.type 
                p!= post.text.slice(0, 50) + "..."


